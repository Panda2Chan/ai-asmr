# 使用 pnpm 作为包管理器
package-manager=pnpm

# 自动安装对等依赖
auto-install-peers=true

# 严格的对等依赖检查
strict-peer-dependencies=false

# 保存精确版本
save-exact=true

# 使用 pnpm 的存储
store-dir=./.pnpm-store

# 启用 pnpm 的符号链接
symlink=true

# 设置 Node.js 版本
node-version=18.0.0

# 设置 npm 注册表
registry=https://registry.npmjs.org/

# 设置镜像（可选，如果需要使用国内镜像）
# registry=https://registry.npmmirror.com/ 